{
  "compilerOptions": {
    "target": "ES2018", // ~node10
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["src/", "."],
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/", "package.json"],
  "exclude": ["**/*.spec.ts"]
}
